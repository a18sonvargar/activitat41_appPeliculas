<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Main {% endblock %}</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

        {% block stylesheets %}{% endblock %}
        <style>
            .container {
                width: auto;
                max-width: 680px;
                padding: 0 15px;
            }

            .footer {
                background-color: #f5f5f5;
            }
        </style>
    </head>
    <body class="d-flex flex-column h-100">
        {% block body %}
            <main role="main" class="flex-shrink-0">
                <div class="container">
                    <h1 class="mt-5"> UF4 Activitat 4.1 App Peliculas</h1>

                    <div class="mt-2">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Nombre</th>
                                <th scope="col">Genero</th>
                                <th scope="col">Descripcion</th>
                                <th scope="col">Editar</th>
                                <th scope="col">Eliminar</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for key, pelicula in peliculas %}
                                <tr>
                                    <td scope="row">{{ pelicula.id }}</td>
                                    <td>{{ pelicula.nombre }}</td>
                                    <td>{{ pelicula.genero }}</td>
                                    <td>{{ pelicula.descripcion }}</td>
                                    <td>
                                        <button type="button" class="btn btn-primary">Editar</button>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger">Eliminar</button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-4">
                        <form action="{{ path('addPelicula') }}" method="POST">
                            <div class="form-group">
                                <label for="nombrePeliculaNueva">Nombre</label>
                                <input type="text" class="form-control" id="nombrePeliculaNueva" name="nombrePeliculaNueva">
                            </div>
                            <div class="form-group">
                                <label for="generoPeliculaNueva">Genero</label>
                                <input type="text" class="form-control" id="generoPeliculaNueva" name="generoPeliculaNueva">
                            </div>
                            <div class="form-group">
                                <label for="descripcionPeliculaNueva">Descripcion</label>
                                <input type="text" class="form-control" id="descripcionPeliculaNueva" name="descripcionPeliculaNueva">
                            </div>
                            <button type="submit" class="btn btn-primary">AÃ±adir Pelicula</button>
                        </form>
                    </div>

                </div>
            </main>

            <footer class="footer mt-auto py-3">
                <div class="container">
                    <span class="text-muted">Footer de la pagina</span>
                </div>
            </footer>

        {% endblock %}
        {% block javascripts %}{% endblock %}

    </body>
</html>
